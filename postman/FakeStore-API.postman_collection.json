{
	"info": {
		"_postman_id": "fakestore-api-collection-v1",
		"name": "FakeStore API (E-Commerce)",
		"description": "Complete collection for FakeStore API (v2.1.11).\n\nBase URL: https://fakestoreapi.com\nAll request bodies use form-data (no raw JSON).\nUse the included environment for {{baseUrl}} and {{id}}.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "https://fakestoreapi.com"
		},
		{
			"key": "id",
			"value": "1"
		},
		{
			"key": "categoryName",
			"value": "electronics"
		}
	],
	"item": [
		{
			"name": "Products",
			"description": "Product CRUD. Endpoints: list all, get by id, create, update, delete.",
			"item": [
				{
					"name": "Get all products",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/products",
							"host": ["{{baseUrl}}"],
							"path": ["products"]
						},
						"description": "Retrieve a list of all available products. Response: 200 array of Product."
					}
				},
				{
					"name": "Get all categories",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/products/categories",
							"host": ["{{baseUrl}}"],
							"path": ["products", "categories"]
						},
						"description": "List all product categories. Response: 200 array of strings (e.g. electronics, jewelery, men's clothing, women's clothing)."
					}
				},
				{
					"name": "Get products by category",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/products/category/{{categoryName}}",
							"host": ["{{baseUrl}}"],
							"path": ["products", "category", "{{categoryName}}"]
						},
						"description": "Products in a specific category. Path: categoryName (e.g. electronics, jewelery, men's clothing, women's clothing). Response: 200 array of Product."
					}
				},
				{
					"name": "Get single product",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/products/{{id}}",
							"host": ["{{baseUrl}}"],
							"path": ["products", "{{id}}"]
						},
						"description": "Retrieve details of a specific product by ID. Path: id (integer). Response: 200 Product."
					}
				},
				{
					"name": "Add a new product",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{ "key": "id", "value": "0", "type": "text", "description": "Product id (integer)" },
								{ "key": "title", "value": "New Product", "type": "text", "description": "Product title" },
								{ "key": "price", "value": "29.99", "type": "text", "description": "Price (float)" },
								{ "key": "description", "value": "Product description", "type": "text", "description": "Description" },
								{ "key": "category", "value": "electronics", "type": "text", "description": "Category name" },
								{ "key": "image", "value": "https://example.com/image.jpg", "type": "text", "description": "Image URL" }
							]
						},
						"url": {
							"raw": "{{baseUrl}}/products",
							"host": ["{{baseUrl}}"],
							"path": ["products"]
						},
						"description": "Create a new product. Body: form-data (id, title, price, description, category, image). Response: 201 Product."
					}
				},
				{
					"name": "Update a product",
					"request": {
						"method": "PUT",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{ "key": "id", "value": "{{id}}", "type": "text", "description": "Product id (integer)" },
								{ "key": "title", "value": "Updated Product", "type": "text", "description": "Product title" },
								{ "key": "price", "value": "39.99", "type": "text", "description": "Price (float)" },
								{ "key": "description", "value": "Updated description", "type": "text", "description": "Description" },
								{ "key": "category", "value": "electronics", "type": "text", "description": "Category" },
								{ "key": "image", "value": "https://example.com/image.jpg", "type": "text", "description": "Image URL" }
							]
						},
						"url": {
							"raw": "{{baseUrl}}/products/{{id}}",
							"host": ["{{baseUrl}}"],
							"path": ["products", "{{id}}"]
						},
						"description": "Update an existing product by ID. Path: id. Body: form-data. Response: 200 Product."
					}
				},
				{
					"name": "Delete a product",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/products/{{id}}",
							"host": ["{{baseUrl}}"],
							"path": ["products", "{{id}}"]
						},
						"description": "Delete a specific product by ID. Path: id (integer). Response: 200."
					}
				}
			]
		},
		{
			"name": "Carts",
			"description": "Cart CRUD. Endpoints: list all, get by id, create, update, delete. Cart products use productId + quantity. CRITICAL: Only pre-seeded carts (ids 1-7) persist. POST creates simulated carts; GET /carts/{newId} returns null.",
			"item": [
				{
					"name": "Get all carts",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/carts",
							"host": ["{{baseUrl}}"],
							"path": ["carts"]
						},
						"description": "Retrieve a list of all available carts. Response: 200 array of Cart."
					}
				},
				{
					"name": "Get single cart",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/carts/{{id}}",
							"host": ["{{baseUrl}}"],
							"path": ["carts", "{{id}}"]
						},
						"description": "Retrieve details of a specific cart by ID. Path: id (integer). Response: 200 Cart or null. Only ids 1-7 return data (pre-seeded carts). Newly created cart ids return null."
					}
				},
				{
					"name": "Add a new cart",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json", "type": "text" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userId\": 1,\n  \"products\": [\n    {\"productId\": 1, \"quantity\": 2},\n    {\"productId\": 2, \"quantity\": 1}\n  ]\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": {
							"raw": "{{baseUrl}}/carts",
							"host": ["{{baseUrl}}"],
							"path": ["carts"]
						},
						"description": "Create a new cart. MUST use JSON body (form-data does NOT work). Body: { userId, products: [{ productId, quantity }] }. Response: 201 Cart with generated id. IMPORTANT: FakeStoreAPI does NOT persist POST data. The cart is simulated only. GET /carts/{returnedId} will return null for newly created carts. Only pre-seeded carts (ids 1-7) exist permanently."
					}
				},
				{
					"name": "Update a cart",
					"request": {
						"method": "PUT",
						"header": [{ "key": "Content-Type", "value": "application/json", "type": "text" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userId\": 1,\n  \"products\": [\n    {\"productId\": 1, \"quantity\": 3},\n    {\"productId\": 2, \"quantity\": 2}\n  ]\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": {
							"raw": "{{baseUrl}}/carts/{{id}}",
							"host": ["{{baseUrl}}"],
							"path": ["carts", "{{id}}"]
						},
						"description": "Update an existing cart by ID. MUST use JSON body. Path: id (use 1-7 for pre-seeded carts). Body: { userId, products: [{ productId, quantity }] }. Response: 200 Cart. Note: Updates to non-seeded ids are simulated but not persisted."
					}
				},
				{
					"name": "Delete a cart",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/carts/{{id}}",
							"host": ["{{baseUrl}}"],
							"path": ["carts", "{{id}}"]
						},
						"description": "Delete a specific cart by ID. Path: id (integer). Response: 200."
					}
				}
			]
		},
